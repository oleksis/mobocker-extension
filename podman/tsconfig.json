{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "dist",
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx"
  },
  "files": ["extension.ts"],
  "include": [
    ".",
    "types/*.d.ts",
    "./types/**/*.d.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "composite": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "allowSyntheticDefaultImports": true
    },
    "include": ["vite.config.ts"]
  }
}
